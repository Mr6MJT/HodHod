cd bin && bash red
clear
printf "Running MJTCHAT Tool..\n"
sleep 2
clear
bash white
printf "This tool coded by Mr MJT [Mahdi]\n"
printf "\n"
printf "[1]-Create chatting room\n"
printf "[2]-Join chatting room\n"
printf "[3]-Nslookup\n"
printf "[4]-Update MJTCHAT\n"
read cj
if [ $cj -eq 1 ]
then
    chmod +x s && ./s
elif [ $cj -eq 2 ]
then
    chmod +x c && ./c
elif [ $cj -eq 3 ]
then
    printf ">>: "
    read ns
    nslookup $ns    
elif [ $cj -eq 4 ]
then
    cd .. && cd .. && rm -r MJTCHAT && git clone https://github.com/Mr6MJT/MJTCHAT && cd MJTCHAT && bash chat
else
    cd .. && bash chat
fi
